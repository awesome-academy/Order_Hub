<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="LoginTitle">
        <item name="android:textColor">@color/color_primary_text</item>
        <item name="android:textSize">@dimen/login_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="LoginInput">
        <item name="android:background">@drawable/shape_login_input_field</item>
        <item name="android:padding">@dimen/login_input_padding</item>
    </style>

    <style name="LoginButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/color_secondary</item>
        <item name="android:textColor">@color/color_secondary_text</item>
        <item name="android:textSize">@dimen/login_button_text_size</item>
        <item name="android:padding">@dimen/login_button_padding</item>
    </style>

    <style name="LoginProgress" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/color_primary_text</item>
    </style>

    <style name="MainScreenToolbar"
        parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:color">@color/color_primary_text</item>
    </style>

    <style name="HeaderDrawer">
        <item name="android:background">@color/color_primary</item>
        <item name="android:paddingTop">@dimen/header_drawer_padding_top</item>
        <item name="android:paddingBottom">@dimen/header_drawer_padding</item>
        <item name="android:paddingLeft">@dimen/header_drawer_padding</item>
        <item name="android:paddingRight">@dimen/header_drawer_padding</item>
        <item name="android:textColor">@color/color_primary_text</item>
    </style>

    <style name="HeaderDrawerTitle">
        <item name="android:textSize">@dimen/header_drawer_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_primary_text</item>
    </style>

    <style name="HeaderDrawerButton">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ItemOrderButton">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ItemOrderProduct">
        <item name="android:textColor">@color/color_black_text</item>
    </style>

    <style name="OrderEditorInput">
        <item name="android:background">@drawable/shape_order_input_field</item>
        <item name="android:padding">@dimen/order_editor_input_padding</item>
    </style>

    <style name="OrderEditorCardContent">
        <item name="android:paddingLeft">@dimen/order_editor_section_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/order_editor_section_padding_horizontal</item>
        <item name="android:paddingBottom">@dimen/order_editor_section_padding_vertical</item>
        <item name="android:paddingTop">@dimen/order_editor_section_padding_vertical</item>
    </style>

    <style name="ButtonAddMore">
        <item name="android:paddingLeft">@dimen/button_add_more_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/button_add_more_padding_horizontal</item>
        <item name="android:background">@color/color_primary_light</item>
        <item name="android:textColor">@color/color_primary_text</item>
    </style>

</resources>
