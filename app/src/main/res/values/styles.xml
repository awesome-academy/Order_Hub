<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
    </style>

    <style name="LoginTitle">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/login_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="LoginInput">
        <item name="android:background">@drawable/shape_login_input_field</item>
        <item name="android:padding">@dimen/login_input_padding</item>
    </style>
    
    <style name="LoginButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/secondaryColor</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/login_button_text_size</item>
        <item name="android:padding">@dimen/login_button_padding</item>
    </style>
</resources>
